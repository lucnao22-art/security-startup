    <dialog id="htmx-modal" class="modal"></dialog>

    <script src="https://unpkg.com/htmx.org@1.9.12"></script>

    <script>
        // Gán phần tử dialog vào một biến toàn cục để dễ gọi từ các template con
        const htmx_modal = document.getElementById("htmx-modal");

        // Xử lý sự kiện đóng modal khi HTMX đã swap xong content
        // Ví dụ: khi lưu form thành công, view không trả về gì, modal sẽ tự đóng.
        htmx.on("htmx:afterSwap", (e) => {
            if (e.detail.target.id === "htmx-modal") {
                if (!e.detail.xhr.response) {
                    htmx_modal.close();
                }
            }
        });

        // Xử lý kết nối WebSocket cho thông báo
        {% if user.is_staff %}
            const notificationSocket = new WebSocket('ws://' + window.location.host + '/ws/notifications/');
            
            notificationSocket.onmessage = function(e) {
                const data = JSON.parse(e.data);
                // (Trong tương lai, chúng ta sẽ hiển thị thông báo đẹp hơn thay vì alert)
                alert('Thông báo mới: ' + data.message); 
            };
        {% endif %}
    </script>
    
